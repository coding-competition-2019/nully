@model List<Facility>;
@{
    ViewData["Title"] = "TableActivities";
}

<h1>TableActivities</h1>
<div>
    <table>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(name => item.Name)
            </td>
            <td>
                @Html.DisplayFor(name => item.Address.Street)
            </td>
			<td>
				@using (Html.BeginForm(new { action = "Detail" }))
				{
					<input name="facility" type="submit" value="Show Detail" />
				}
			</td>

		</tr>

		}
    </table>
</div>
